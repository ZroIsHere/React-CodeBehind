{
  "name": "react-codebehind",
  "displayName": "React CodeBehind",
  "description": "Toggle between JSX/TSX and related CSS file with F7-style workflow.",
  "version": "0.0.1",
  "publisher": "ZroIsHere",
  "engines": { "vscode": "^1.85.0" },
  "activationEvents": ["onCommand:reactCodebehind.toggle"],
  "main": "./dist/extension.js",
  "repository": {
    "url": "https://github.com/ZroIsHere/React-CodeBehind"
  },

  "contributes": {
    "commands": [{ "command": "reactCodebehind.toggle", "title": "Toggle JSX/TSX â†” CSS" }],
    "keybindings": [{ "command": "reactCodebehind.toggle", "key": "f7", "when": "editorTextFocus" }]
  },
  "scripts": { "compile": "tsc -p ." },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0"
  }
}